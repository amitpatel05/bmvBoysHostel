<div class="form-body">
  <div class="form-container mt-3 mb-3">
    <h1 class="form-head">Feedback Form</h1>

    <form action="/feedback" method="POST" novalidate>
      <div class="form-group">
        <label for="feedback" class="form-label">Feedback *</label>
        <textarea
          id="feedback"
          name="feedback"
          rows="8"
          placeholder="Write your valuable feedback here..."
          class="form-textarea"
          required
        ></textarea>
      </div>

      <button type="submit" class="form-button">Submit</button>
      <button type="reset" class="form-button">Reset</button>
    </form>
  </div>
</div>
