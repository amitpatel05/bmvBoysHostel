<div class="map-body">
  <div id="map"></div>
</div>

<script>
  var map = L.map("map").setView([23.8744917, 78.8186008], 15);

  L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
    maxZoom: 19,
  }).addTo(map);

  var marker = L.marker([23.874492, 78.818601]).addTo(map);

  // Search function
  var geocoder = L.Control.geocoder({
    defaultMarkGeocode: false,
  })
    .on("markgeocode", function (e) {
      if (marker) {
        map.removeLayer(marker);
      }

      marker = L.marker(e.geocode.center).addTo(map);

      map.setView(e.geocode.center, 17);
    })
    .addTo(map);
</script>
